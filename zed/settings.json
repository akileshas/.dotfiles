{
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-3-5-sonnet"
    },
    "version": "2"
  },
  "base_keymap": "VSCode",
  "vim_mode": true,
  "ui_font_size": 15,
  "buffer_font_size": 15,
  "theme": {
    "mode": "dark",
    "light": "Andromeda",
    "dark": "Andromeda"
  }
}
